{% if settings.business_display_format == 12 %}
	{% assign am = '<small>am</small>' %}
	{% assign pm = '<small>pm</small>' %}

	/* Make all open and close times 0000 format */
	{% assign mon_open = settings.business_open_monday | remove: ':' %}
	{% assign tue_open = settings.business_open_tuesday | remove: ':' %}
	{% assign wed_open = settings.business_open_wednesday | remove: ':' %}
	{% assign thu_open = settings.business_open_thursday | remove: ':' %}
	{% assign fri_open = settings.business_open_friday | remove: ':' %}
