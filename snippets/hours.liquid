	<ul class="open">
		<h2>Open hours</h2>
		<li><h3>Monday</h3>{{ monday }}</li>
		<li><h3>Tuesday</h3>{{ tuseday }}</li>
		<li><h3>Wednesday</h3>{{ wednesday }}</li>
		<li><h3>Thursday</h3>{{ thursday }}</li>
