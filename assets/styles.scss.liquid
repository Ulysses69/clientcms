/* #Breakpoint and Grid Variables
==============================================================================*/
{% assign viewport = 1 %}
{% assign small = 480 %}
{% assign medium = 768 %}
{% assign large = 769 %}
{% assign xlarge = 1025 %}

$viewportIncrement: {{ viewport }}px;

$small: {{ small }}px;
$medium: {{ medium }}px;
$large: {{ large }}px;
$xlarge: {{ xlarge }}px;
$min_small: {{ small | plus: 1 }}px;
$min_xlarge: {{ xlarge | plus: 1 }}px;

$postSmall: $small + $viewportIncrement;
$preMedium: $medium - $viewportIncrement;
$preLarge: $large - $viewportIncrement;
$preXLarge: $xlarge - $viewportIncrement;

/*================ The following are dependencies of csswizardry grid ================*/
$breakpoints: (
  'small' '(max-width: #{$small})',
  'medium' '(min-width: #{$postSmall}) and (max-width: #{$medium})',
  'medium-down' '(max-width: #{$medium})',
  'large' '(min-width: #{$large})',
  'xlarge' '(min-width: #{$xlarge})'
);
$breakpoint-has-widths: ('small', 'medium', 'medium-down', 'large', 'xlarge');
$breakpoint-has-push:  ('medium', 'medium-down', 'large', 'xlarge');
$breakpoint-has-pull:  ('medium', 'medium-down', 'large', 'xlarge');


